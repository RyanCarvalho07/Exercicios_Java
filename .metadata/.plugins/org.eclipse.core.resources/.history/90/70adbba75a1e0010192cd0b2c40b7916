package application;

import java.util.Locale;
import java.util.Scanner;

import model.Carrinho;
import service.CarrinhoService;

public class Main {
	public static void main(String[] args) throws Exception {

		Locale.setDefault(Locale.US);
		Scanner sc = new Scanner(System.in);
		CarrinhoService crs = new CarrinhoService();
		Carrinho carrinho = new Carrinho();

		System.out.println("===== MENU DE COMPRAS =====");
		while (true) {
			System.out.println("[1] Adicionar Produto ao Carrinho");
			System.out.println("[2] Remover Produto do Carrinho");
			System.out.println("[3] Listar intens no Carrinho");
			System.out.println("[4] Calcular Total");
			System.out.println("[5] Finalizar Compra");
			System.out.println("[6] Sair");
			System.out.print("Escolha uma opção: ");
			int opcao = sc.nextInt();
			sc.nextLine();

			switch (opcao) {

			case 1:
				System.out.print("Digite o nome do produto: ");
				String nome = sc.nextLine();
				System.out.print("Digite o preço do produto: ");
				double preco = sc.nextDouble();
				System.out.print("Digite a Quantidade: ");
				int quantidade = sc.nextInt();
				sc.nextLine();

				crs.adicionarProduto(nome, preco, quantidade);

				break;

			case 2:
				System.out.println("Digite o nome do produto que deseja remover: ");
				String nomeExcluir = sc.nextLine();
				boolean removido = crs.removerProduto(nomeExcluir);

				if (removido) {
					System.out.println("Item Removido com sucesso!");
				} else {
					System.out.println("Produto não encotrado no carrinho.");
				}
				break;

			case 3:
				carrinho.lisatarProduto();
				break;

			case 4:
				double total = carrinho.calcularTotal();
				System.out.println(total);
				break;

			case 5:
				System.out.println(carrinho.toString());
				carrinho.limparCarrinho();
				break;

			case 6:
				System.out.println("Finalizando programa...");
				sc.close();
				return;

			}
		}
	}

}
