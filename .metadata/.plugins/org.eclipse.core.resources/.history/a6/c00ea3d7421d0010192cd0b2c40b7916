package application;

import java.util.Locale;
import java.util.Scanner;

import entities.Carrinho;

public class App {
    public static void main(String[] args) throws Exception {

        Locale.setDefault(Locale.US);
        Scanner sc = new Scanner(System.in);
        Carrinho crr = new Carrinho();
        System.out.println("===== MENU DE COMPRAS =====");
        while (true) {
            System.out.println("[1] Adicionar Produto ao Carrinho");
            System.out.println("[2] Remover Produto do Carrinho");
            System.out.println("[3] Listar intens no Carrinho");
            System.out.println("[4] Calcular Total");
            System.out.println("[5] Finalizar Compra");
            System.out.println("[6] Sair");
            System.out.println("Escolha uma opção: ");
            int opcao = sc.nextInt();

            if (sc.hasNextInt()) {
                System.out.println("Opção invalida! Digite um número.");
                sc.next();
                continue;
            }

            switch (opcao) {

                case 1:
                    crr.adicionarItens();
                    break;
                case 2:
                    crr.removerItens();
                    break;
                case 3:
                    crr.lisatarItens();
                    break;
                case 4:
                   System.out.println(crr.Total()); 
                    break;
                case 5:
                    System.out.println(crr.finalizar());
                    break;
                case 6:
                    System.out.println("Finaliando programa...");
                    sc.close();
                    return;

            }
        }
    }

}
